<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context=".StartActivity">

        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:name="com.google.android.gms.maps.MapFragment"/>

        <LinearLayout
            android:paddingBottom="16dp"
            android:background="#1a237e"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:text="CURRENT ADRESS:"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#eee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:paddingTop="2dp"
                    android:text="address"
                    android:textSize="22sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#ffffff"
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/refresh_btn"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_action_navigation_refresh"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="48dp"
                android:layout_height="match_parent" />

            <ProgressBar
                android:layout_gravity="center_vertical"
                android:id="@+id/address_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:visibility="gone" />

        </LinearLayout>

        <RelativeLayout
            android:paddingTop="22dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.simon.findme.CircleButton
                android:onClick="shareLocation"
                app:cb_color="@color/accent_color_secondary"
                app:cb_pressed_ring_width="12dp"
                android:layout_centerHorizontal="true"
                android:layout_width="140dp"
                android:layout_height="140dp" />

            <TextView
                android:layout_marginTop="38dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:textSize="22sp"
                android:gravity="center"
                android:text="SHARE \nLOCATION"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>


</ScrollView>